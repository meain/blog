<ol reversed class="postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}

  {% set currentItemIndex = postslist.length - loop.index %}
  {% set nextItemIndex = currentItemIndex + 1 %}

  {% set year = postslist[currentItemIndex].date | dateYear %}
  {% set nyear = postslist[nextItemIndex].date | dateYear %}
  {% if year != nyear %}
    {% if currentItemIndex != 0 %}
    <h1 class="category-title">{{ year }} Â¬</h1>
    {% endif %}
  {% endif %}

  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <a href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
    {% for tag in post.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
  </li>
{% endfor %}
</ol>
